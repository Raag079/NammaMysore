<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="10dp"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recipelistimage"
            android:layout_width="100dp"
            android:layout_height="120dp" />
        <!--<project.raghavendra.nammamysore.TouchImageView-->

        <!--<ImageView-->
        <!--android:id="@+id/recipelistimage"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_width="120dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:padding="10dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieName"
            android:layout_toRightOf="@+id/recipelistimage"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieLanguage"
            android:textColor="@android:color/black"
            android:layout_below="@+id/movieName"
            android:layout_alignLeft="@+id/movieName"
            android:layout_alignStart="@+id/movieName"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_below="@+id/movieLanguage"
            android:layout_alignLeft="@+id/movieName"
            android:layout_alignStart="@+id/movieName"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:id="@+id/movieCast"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieDirector"
            android:layout_below="@+id/movieCast"
            android:layout_alignLeft="@+id/movieCast"
            android:layout_alignStart="@+id/movieCast"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</android.support.v7.widget.CardView>