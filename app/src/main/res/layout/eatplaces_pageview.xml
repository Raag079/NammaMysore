<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.raghavendra.nammamysore.SettingsActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="50"
        android:gravity="center"
        android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/placeName"
                android:layout_below="@+id/divider1"
                android:padding="5dp"
                android:layout_weight="5"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="20sp"
                android:background="@android:color/holo_blue_light" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider2"
                android:layout_below="@+id/placeName"
                />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/movieimage"
                android:scaleType="fitXY"
                android:layout_below="@+id/divider2"
                android:padding="5dp"
                android:layout_weight="21"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <!--<Button-->
            <!--android:layout_width="135dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="ADD TO FAVOURITES"-->
            <!--android:id="@+id/favouritesButton"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_toRightOf="@+id/recipeimage"-->
            <!--android:layout_below="@+id/divider1"-->
            <!--android:layout_marginTop="70dp"-->
            <!--android:visibility="gone"/>-->


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/divider6"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/movieimage" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Click here to see location on Map"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:id="@+id/button1"
                android:textIsSelectable="false"
                android:textStyle="bold|italic"
                android:layout_weight="5"
                android:gravity="center"
                android:layout_below="@+id/divider6"
                android:layout_centerHorizontal="true"
                android:background="@android:color/holo_blue_bright" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/button1"
                android:id="@+id/divider7"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:id="@+id/mainfrag"
                android:layout_below="@+id/divider7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:id="@+id/textView13"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:background="@android:color/holo_blue_dark" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView13"
                    android:layout_toEndOf="@+id/textView13"
                    android:textSize="15dp"
                    android:background="@android:color/holo_blue_dark" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/address"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/holo_blue_light" />

            </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
